<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.fragments.AccountFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="25dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/infoLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingHorizontal="23dp"
                android:paddingVertical="25dp">

                <ImageView
                    android:id="@+id/accountImg"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/img_account_user" />

                <TextView
                    android:id="@+id/accountName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/accountImg"
                    app:layout_constraintStart_toEndOf="@id/accountImg"
                    android:text="Afsar Hossen"
                    android:fontFamily="@font/gilroy_bold"
                    android:textColor="@color/black"
                    android:textSize="23dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/accountEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/accountName"
                    app:layout_constraintStart_toStartOf="@id/accountName"
                    android:text="Imshuvo97@gmail.com"
                    android:fontFamily="@font/gilroy_medium"
                    android:textColor="@color/app_gray"
                    android:textSize="18dp" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    app:layout_constraintTop_toTopOf="@id/accountName"
                    app:layout_constraintBottom_toBottomOf="@id/accountName"
                    app:layout_constraintStart_toEndOf="@id/accountName"
                    android:src="@drawable/ic_edit_info"
                    android:layout_marginStart="10dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2.3dp"
                app:layout_constraintTop_toBottomOf="@id/infoLayout"
                android:background="@color/separator_gray" />

            <LinearLayout
                android:id="@+id/optionsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/infoLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        android:paddingVertical="20dp"
                        android:paddingStart="30dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_account_orders"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="17dp"
                            android:fontFamily="@font/gilroy_semibold"
                            android:text="Orders"
                            android:textColor="@color/black"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="16dp"
                        android:rotation="180"
                        android:src="@drawable/ic_arrow_left_black" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2.3dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/separator_gray" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        android:paddingVertical="20dp"
                        android:paddingStart="30dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_account_my_details"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="17dp"
                            android:fontFamily="@font/gilroy_semibold"
                            android:text="My Details"
                            android:textColor="@color/black"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="16dp"
                        android:rotation="180"
                        android:src="@drawable/ic_arrow_left_black" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2.3dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/separator_gray" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        android:paddingVertical="20dp"
                        android:paddingStart="30dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_account_delivery_address"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="17dp"
                            android:fontFamily="@font/gilroy_semibold"
                            android:text="Delivery Address"
                            android:textColor="@color/black"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="16dp"
                        android:rotation="180"
                        android:src="@drawable/ic_arrow_left_black" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2.3dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/separator_gray" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        android:paddingVertical="20dp"
                        android:paddingStart="30dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_account_payment_methods"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="17dp"
                            android:fontFamily="@font/gilroy_semibold"
                            android:text="Payment Methods"
                            android:textColor="@color/black"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="16dp"
                        android:rotation="180"
                        android:src="@drawable/ic_arrow_left_black" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2.3dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/separator_gray" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        android:paddingVertical="20dp"
                        android:paddingStart="30dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_account_promo_code"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="17dp"
                            android:fontFamily="@font/gilroy_semibold"
                            android:text="Promo Card"
                            android:textColor="@color/black"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="16dp"
                        android:rotation="180"
                        android:src="@drawable/ic_arrow_left_black" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2.3dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/separator_gray" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        android:paddingVertical="20dp"
                        android:paddingStart="30dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_account_notifications"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="17dp"
                            android:fontFamily="@font/gilroy_semibold"
                            android:text="Notifications"
                            android:textColor="@color/black"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="16dp"
                        android:rotation="180"
                        android:src="@drawable/ic_arrow_left_black" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2.3dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/separator_gray" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        android:paddingVertical="20dp"
                        android:paddingStart="30dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_account_help"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="17dp"
                            android:fontFamily="@font/gilroy_semibold"
                            android:text="Help"
                            android:textColor="@color/black"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="16dp"
                        android:rotation="180"
                        android:src="@drawable/ic_arrow_left_black" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2.3dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/separator_gray" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        android:paddingVertical="20dp"
                        android:paddingStart="30dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_account_about"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="17dp"
                            android:fontFamily="@font/gilroy_semibold"
                            android:text="About"
                            android:textColor="@color/black"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="16dp"
                        android:rotation="180"
                        android:src="@drawable/ic_arrow_left_black" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2.3dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/separator_gray" />

                </RelativeLayout>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/logoutBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/optionsLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Log Out"
                android:textColor="@color/app_green"
                android:textSize="20dp"
                android:fontFamily="@font/gilroy_semibold"
                android:background="@drawable/box_logout"
                android:textAllCaps="false"
                android:paddingVertical="20dp"
                android:layout_marginTop="55dp"
                android:layout_marginHorizontal="25dp" />

            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                app:layout_constraintStart_toStartOf="@id/logoutBtn"
                app:layout_constraintTop_toTopOf="@id/logoutBtn"
                app:layout_constraintBottom_toBottomOf="@id/logoutBtn"
                android:src="@drawable/ic_logout"
                android:translationZ="2dp"
                android:layout_marginStart="20dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>
