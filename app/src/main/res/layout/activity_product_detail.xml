<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.activities.ProductDetailActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBar"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@color/white">
                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.appcompat.widget.Toolbar
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:id="@+id/productImg"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/img_apple"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                />
                            <ImageView
                                android:id="@+id/backArrow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_arrow_left_black"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@id/productImg"
                                android:layout_marginTop="10dp"
                                />
                            <ImageView
                                android:layout_width="23dp"
                                android:layout_height="23dp"
                                android:src="@drawable/ic_upload_black"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@id/backArrow"
                                app:layout_constraintBottom_toBottomOf="@id/backArrow"
                                android:layout_marginEnd="20dp"
                                />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.appcompat.widget.Toolbar>
                </com.google.android.material.appbar.CollapsingToolbarLayout>

            </com.google.android.material.appbar.AppBarLayout>
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/appBar">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:paddingStart="23dp"
                    android:paddingEnd="23dp">
                    <TextView
                        android:id="@+id/productTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/heartIcon"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="Natural Red Apple"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        android:fontFamily="@font/gilroy_bold"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="23dp"
                        />
                    <ImageView
                        android:id="@+id/heartIcon"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        app:layout_constraintTop_toTopOf="@id/productTitle"
                        app:layout_constraintBottom_toBottomOf="@id/productTitle"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:src="@drawable/ic_heart_gray"
                        />
                    <TextView
                        android:id="@+id/weight_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="@id/productTitle"
                        app:layout_constraintTop_toBottomOf="@id/productTitle"
                        android:text="1kg, Price"
                        android:fontFamily="@font/gilroy_semibold"
                        android:textColor="@color/medium_gray"
                        android:textSize="17sp"
                        />
                    <ImageButton
                        android:id="@+id/decrementBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="@id/weight_cost"
                        app:layout_constraintTop_toBottomOf="@id/weight_cost"
                        android:src="@drawable/ic_decrement_gray"
                        android:background="@color/white"
                        android:layout_marginTop="30dp"
                        />
                    <TextView
                        android:id="@+id/counter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@id/decrementBtn"
                        app:layout_constraintTop_toTopOf="@id/decrementBtn"
                        app:layout_constraintBottom_toBottomOf="@id/decrementBtn"
                        android:text="1"
                        android:fontFamily="@font/gilroy_semibold"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:paddingHorizontal="19dp"
                        android:paddingVertical="10dp"
                        android:background="@drawable/box_item_count"
                        android:layout_marginLeft="10dp"
                        />
                    <ImageButton
                        android:id="@+id/incrementBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@id/counter"
                        app:layout_constraintTop_toTopOf="@id/decrementBtn"
                        app:layout_constraintBottom_toBottomOf="@id/decrementBtn"
                        android:src="@drawable/ic_increment_green"
                        android:background="@color/white"
                        android:layout_marginLeft="10dp"
                        />

                    <TextView
                        android:id="@+id/productPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/incrementBtn"
                        app:layout_constraintBottom_toBottomOf="@id/incrementBtn"
                        app:layout_constraintEnd_toEndOf="@id/heartIcon"
                        android:text="$4.99"
                        android:textColor="@color/black"
                        android:fontFamily="@font/gilroy_bold"
                        android:textSize="25sp"
                        />

                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        app:layout_constraintTop_toBottomOf="@id/counter"
                        app:layout_constraintStart_toStartOf="@id/decrementBtn"
                        android:background="#ECECEC"
                        android:layout_marginTop="30dp"
                        />

                    <TextView
                        android:id="@+id/detailsTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="@id/productTitle"
                        app:layout_constraintTop_toBottomOf="@id/view"
                        android:text="Product Detail"
                        android:textColor="#333333"
                        android:fontFamily="@font/gilroy_bold"
                        android:textSize="18sp"
                        android:layout_marginTop="10dp"
                        />
                    <ImageView
                        android:id="@+id/downArrow"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:layout_constraintTop_toTopOf="@id/detailsTitle"
                        app:layout_constraintBottom_toBottomOf="@id/detailsTitle"
                        app:layout_constraintEnd_toEndOf="@id/heartIcon"
                        android:src="@drawable/ic_arrow_left_black"
                        android:rotation="270"
                        />
                    <TextView
                        android:id="@+id/productDetails"
                        android:layout_width="392dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/detailsTitle"
                        app:layout_constraintStart_toStartOf="@id/detailsTitle"
                        android:paddingRight="40dp"
                        android:layout_marginTop="8dp"
                        android:lineSpacingExtra="3dp"
                        android:textColor="@color/medium_gray"
                        android:fontFamily="@font/gilroy_semibold"
                        android:text="Apples Are Nutritious. Apples May Be good For Weight Loss. Apples May Be Good For Your Body. It is Part Of A Healthful And Varifies Diet."
                        />

                    <View
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        app:layout_constraintTop_toBottomOf="@id/productDetails"
                        app:layout_constraintStart_toStartOf="@id/decrementBtn"
                        android:background="#ECECEC"
                        android:layout_marginTop="23dp"
                        />

                    <TextView
                        android:id="@+id/nutritionsTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="@id/productTitle"
                        app:layout_constraintTop_toBottomOf="@id/view2"
                        android:text="Nutritions"
                        android:textColor="#333333"
                        android:fontFamily="@font/gilroy_bold"
                        android:textSize="18sp"
                        android:layout_marginTop="18dp"
                        />
                    <TextView
                        android:id="@+id/weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/nutritionsTxt"
                        app:layout_constraintBottom_toBottomOf="@id/nutritionsTxt"
                        app:layout_constraintEnd_toStartOf="@id/rightArrow1"
                        app:layout_constraintEnd_toEndOf="@id/ratingBar"
                        android:text="100gr"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:fontFamily="@font/gilroy_bold"
                        android:textColor="@color/medium_gray"
                        android:background="@drawable/box_gram"
                        android:padding="3dp"
                        android:layout_marginEnd="12dp"
                        />
                    <ImageView
                        android:id="@+id/rightArrow1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:layout_constraintTop_toTopOf="@id/nutritionsTxt"
                        app:layout_constraintBottom_toBottomOf="@id/nutritionsTxt"
                        app:layout_constraintEnd_toEndOf="@id/heartIcon"
                        android:src="@drawable/ic_arrow_left_black"
                        android:rotation="180"
                        />

                    <View
                        android:id="@+id/view3"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        app:layout_constraintTop_toBottomOf="@id/nutritionsTxt"
                        app:layout_constraintStart_toStartOf="@id/decrementBtn"
                        android:background="#ECECEC"
                        android:layout_marginTop="18dp"
                        />

                    <TextView
                        android:id="@+id/reviewTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="@id/productTitle"
                        app:layout_constraintTop_toBottomOf="@id/view3"
                        android:text="Review"
                        android:textColor="#333333"
                        android:fontFamily="@font/gilroy_bold"
                        android:textSize="18sp"
                        android:layout_marginTop="12dp"
                        />

                    <!--<LinearLayout
                        android:id="@+id/stars"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/reviewTxt"
                        app:layout_constraintBottom_toBottomOf="@id/reviewTxt"
                        app:layout_constraintEnd_toStartOf="@id/rightArrow2"
                        android:layout_marginRight="8dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/ic_rating_star_orange"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/ic_rating_star_orange"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/ic_rating_star_orange"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/ic_rating_star_orange"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/ic_rating_star_orange"
                            />
                    </LinearLayout>-->

                    <RatingBar
                        android:id="@+id/ratingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/reviewTxt"
                        app:layout_constraintBottom_toBottomOf="@id/reviewTxt"
                        app:layout_constraintEnd_toEndOf="@id/weight"
                        android:theme="@style/ratingBarStyle"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:scaleX="1.3"
                        android:scaleY="1.3"
                        android:rating="5"
                        android:layout_marginEnd="8dp"
                        />

                    <ImageView
                        android:id="@+id/rightArrow2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:layout_constraintTop_toTopOf="@id/reviewTxt"
                        app:layout_constraintBottom_toBottomOf="@id/reviewTxt"
                        app:layout_constraintEnd_toEndOf="@id/heartIcon"
                        android:src="@drawable/ic_arrow_left_black"
                        android:rotation="180"
                        />
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/addToBasketBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/reviewTxt"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:background="@drawable/box_get_started"
                        android:text="Add to Basket"
                        android:textSize="18dp"
                        android:fontFamily="@font/gilroy_semibold"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:layout_marginTop="22dp"
                        android:layout_marginBottom="22dp"
                        android:paddingVertical="20dp"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</layout>